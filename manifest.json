{
  "manifest_version": 3,
  "name": "Gemini Page Translator",
  "version": "1.0",
  "description": "Translate the current page using the Gemini API.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "commands": {
    "translate-page": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Translate the current page"
    }
  }
} 